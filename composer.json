{
    "name": "bramus/database",
    "description": "A (Legacy) Database Layer for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bramus",
            "email": "bramus@bram.us"
        }
    ],
    "require": {
        "php": ">=7.2",
        "doctrine/dbal": "~2.5",
        "pimple/pimple": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "bramus/silex-stub": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Bramus\\Database\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Bramus\\Database\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "lint": "php-cs-fixer fix --diff --dry-run --ansi",
        "fix": "php-cs-fixer fix"
    }
}
